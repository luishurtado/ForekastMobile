<Alloy>
	<Window id="SettingsFeedbackWindow" title="Feedback">
		<RightNavButton platform="ios">
			<Button title="Send" onClick="submitForm" />
		</RightNavButton>
		
		<Menu platform="android">
			<MenuItem title="Send" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" onClick="submitForm" />
		</Menu>
		
		<ActionBar displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" platform="android" />

		<ScrollView>
			<View class="field">
				<Label text="Name" /> <TextField id="FieldName" hintText="Optional" />
			</View>
			
			<View class="separator" />
			
			<View class="field">
				<Label text="Email" /> <TextField id="FieldEmail" hintText="Optional" />
			</View>
			
			<View class="separator" />
			
			<View class="field">
				<Label text="@Twitter" /> <TextField id="FieldTwitter" hintText="Optional" />
			</View>
			
			<View class="separator" />
			
			<TextArea id="FieldMessage" />
		</ScrollView>
	</Window>
</Alloy>